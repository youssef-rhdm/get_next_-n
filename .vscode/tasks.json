{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build for OSX",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-g",
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/get_next_line.c",
                "${workspaceFolder}/get_next_line_utils.c",
                "-o",
                "${fileDirname}/main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build File For Windows",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-D",
                "BUFFER_SIZE=42",
                "-g",
                "${workspaceFolder}/main.c",
                "get_next_line.c",
                "get_next_line_utils.c",
                "-o",
                "${fileDirname}\\main.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: C:\\MinGW\\bin\\gcc.exe"
        },
    ],
    "version": "2.0.0"
}
