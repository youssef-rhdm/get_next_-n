{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "attach",
      "name": "Attach",
      "program": "${workspaceFolder}/main.exe"
    },
    {
      "name": "Debug C Program Windows",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/a.exe", // Path to your compiled executable
      "args": [],
      "stopAtEntry": false, // Set to true if you want to break at the entry point
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false, // Set to true if you want an external terminal for input/output
      "MIMode": "gdb", // For MinGW (optional if you're using MSVC)
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build", // Optional: If you have a task to build your program before debugging
      "miDebuggerPath": "C:/mingw/bin/gdb.exe", // Path to gdb if using MinGW
      "logging": {
        "moduleLoad": false,
        "engineLogging": false,
        "trace": false
      }
    }
  ]
}
